@model MotorcyclesEntities.Product
@{
    ViewBag.Title = "Edit";
}


<h2>Edit Product</h2>
<form id="editProduct">

    <input type="hidden" name="ID" value="@Model.ID" />
    <br />
    <label>Name</label>
    <input name="Name" value="@Model.Name" />
    <br />

    <label>Description</label>
    <input name="Description" value="@Model.Description" />

    <br />
    <label>Price</label>
    <input name="ProductPrice" value="@Model.ProductPrice" />

    <br />

    <button id="updateBtn" type="button">Update</button>
</form>
<script>
  //Start Search Code
    $("#updateBtn").click(function () {

        $.ajax({
            type:'POST',
            url: '/Product/Edit',
            data: $("#editProduct").serialize()
        })
        .done(function (response) {
            $("#tableContiner").html(response);
            $('#actionContiner').html("");

        })
        .fail(function (XMLHttpRequest, textStatus ,errorThrown) {
            alert("FAIL");
        });
    });
    //End Search  Code
</script>

